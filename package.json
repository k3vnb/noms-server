{
  "name": "noms-server",
  "version": "1.0.0",
  "description": "API, server, and database for Noms PDX",
  "main": "src/server.js",
  "type": "commonjs",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "test": "mocha --require test/setup.js",
    "dev": "nodemon src/server.js",
    "start": "node src/server.js",
    "migrate": "npx postgrator --config postgrator-config.js",
    "migrate:test": "env NODE_ENV=test npm run migrate",
    "migrate:production": "env SSL=true DATABASE_URI=$(heroku config:get DATABASE_URI) npx postgrator --config postgrator-production-config.js",
    "predeploy": "npm audit && npm run migrate:production",
    "deploy": "git push heroku main"
  },
  "keywords": [],
  "engines": {
    "node": "20.11.1"
  },
  "author": "k3vnb",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "helmet": "^7.1.0",
    "knex": "^3.1.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.12.0",
    "uuid": "^10.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "chai": "^4.4.1",
    "eslint": "9.5.0",
    "husky": "^3.1.0",
    "mocha": "^6.2.3",
    "nodemon": "^1.19.4",
    "postgrator-cli": "^3.3.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.2",
    "supertest": "^4.0.2"
  }
}
