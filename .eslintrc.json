{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "arrow-parens": ["off"],
    "camelcase": ["off"],
    "nonblock-statement-body-position": ["off"],
    "consistent-return": ["off"],
    "no-restricted-syntax": ["off"],
    "implicit-arrow-linebreak": ["off"],
    "function-paren-newline": ["off"],
    "curly": ["off"],
    "comma-dangle": ["off"],
    "no-use-before-define": ["off"],
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "no-unused-vars": ["warn"],
    "no-var": ["off"],
    "one-var": ["off"]
  }
}
